    "@nestjs/platform-express": "^9.2.1",
    "@nestjs/typeorm": "^9.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "crypto-js": "^4.1.1",
    "dayjs": "^1.11.6",
    "dotenv": "^16.0.3",
    "express-session": "^1.17.3",
    "handlebars": "^4.7.7",
